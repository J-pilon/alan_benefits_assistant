<!-- Chat Interface -->
<div data-controller="chat">
  <!-- Floating Chat Button -->
  <button 
    data-action="click->chat#toggle"
    class="fixed bottom-6 right-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-full p-4 shadow-lg hover:shadow-xl transition-all duration-200 z-40 group">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    <span class="absolute top-0 right-0 block h-3 w-3 rounded-full bg-green-400 ring-2 ring-white animate-pulse"></span>
  </button>

  <!-- Chat Panel (Slide-out from right) -->
  <div 
    data-chat-target="panel"
    class="fixed top-0 right-0 h-full w-full md:w-96 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 flex flex-col">
    
    <!-- Chat Header -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-4 flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="bg-white bg-opacity-20 rounded-full p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-lg">Benefits Assistant</h3>
          <p class="text-xs opacity-90">Ask me anything</p>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <button 
          data-action="click->chat#toggleHistory"
          class="hover:bg-white hover:bg-opacity-20 rounded-full p-2 transition-colors flex items-center space-x-1">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium">History</span>
        </button>
        <button 
          data-action="click->chat#close"
          class="hover:bg-white hover:bg-opacity-20 rounded-full p-2 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Messages Container -->
    <div 
      data-chat-target="messages"
      class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50">
      
      <!-- Chat History Section (Hidden by default) -->
      <div data-chat-target="history" class="hidden">
        <!-- Load existing messages from database -->
        <% if @chat_messages.any? %>
          <div class="mb-4 text-center">
            <span class="text-xs font-semibold text-gray-500 bg-white px-3 py-1 rounded-full shadow-sm">Chat History</span>
          </div>
          <% @chat_messages.each do |message| %>
            <!-- User Message -->
            <div class="mb-4">
              <div class="flex justify-end">
                <div class="bg-blue-500 text-white rounded-lg px-4 py-2 max-w-xs lg:max-w-md">
                  <p class="text-sm"><%= message.user_message %></p>
                  <p class="text-xs opacity-75 mt-1"><%= message.created_at.strftime("%l:%M %p") %></p>
                </div>
              </div>
            </div>
            
            <!-- AI Response -->
            <% if message.ai_response.present? %>
              <div class="mb-4">
                <div class="flex justify-start">
                  <div class="bg-green-500 text-white rounded-lg px-4 py-2 max-w-xs lg:max-w-md">
                    <p class="text-sm"><%= message.ai_response %></p>
                    <p class="text-xs opacity-75 mt-1"><%= message.created_at.strftime("%l:%M %p") %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <div class="inline-block bg-white rounded-lg p-6 shadow-sm">
              <div class="bg-gray-100 rounded-full p-3 inline-block mb-3">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2">No History Yet</h4>
              <p class="text-sm text-gray-600">Your chat history will appear here.</p>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Welcome Message (Always visible) -->
      <div class="text-center py-8">
        <div class="inline-block bg-white rounded-lg p-6 shadow-sm">
          <div class="bg-indigo-100 rounded-full p-3 inline-block mb-3">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h4 class="font-bold text-gray-900 mb-2">Welcome!</h4>
          <p class="text-sm text-gray-600">Ask me about your benefits, coverage, or balances.</p>
        </div>
      </div>
    </div>

    <!-- Input Form -->
    <div class="border-t border-gray-200 p-4 bg-white">
      <form data-chat-target="form" data-action="submit->chat#submitMessage" class="flex space-x-2">
        <textarea
          data-chat-target="input"
          placeholder="Ask about your benefits..."
          rows="2"
          class="flex-1 resize-none border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"></textarea>
        <button
          type="submit"
          data-chat-target="sendButton"
          class="bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg px-4 py-2 transition-colors flex items-center justify-center">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

